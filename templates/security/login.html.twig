{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<div class="form-page-container auth-page">
    <div class="form-header">
        <h1>Connexion</h1>
        <p>Connectez-vous Ã  votre compte</p>
    </div>

    <div class="form-wrapper">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <form method="post">
            <div class="form-group">
                <label for="inputEmail">Email</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-input" autocomplete="email" required autofocus>
            </div>
            <div class="form-group">
                <label for="inputPassword">Mot de passe</label>
                <input type="password" name="password" id="inputPassword" class="form-input" autocomplete="current-password" required>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <div class="form-actions">
                <button class="btn-submit" type="submit">Se connecter</button>
            </div>
        </form>

        <div class="form-links">
            <p>Pas encore de compte ? <a href="{{ path('app_register') }}">S'inscrire</a></p>
        </div>
    </div>
</div>
{% endblock %}