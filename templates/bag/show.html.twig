{% block title %}Bag{% endblock %}

{% block body %}
    <h1>Bag</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ bag.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ bag.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ bag.description }}</td>
            </tr>
            <tr>
                <th>Img</th>
                <td>{{ bag.img }}</td>
