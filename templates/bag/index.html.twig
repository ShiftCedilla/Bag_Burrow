{% extends 'base.html.twig' %}

{% block title %}Bag index{% endblock %}

{% block body %}
<div class="page-container">
    <div class="logo-top-left">
        <img src="{{ asset('images/BagBorrowLogo.png') }}" alt="Bag Borrow Logo" class="logo-image">
    </div>
    
    <div class="page-header">
        <h1>Bag Borrow</h1>
        <p>Découvrez et partagez vos sacs</p>
        <a href="{{ path('app_bag_new') }}" class="btn-add">Ajouter un nouveau sac</a>
    </div>

    <div class="bags-grid">
        {% for bag in bags %}
            <div class="bag-card">
                <div class="bag-image-container">
                    <a href="{{ path('app_bag_show', {'id': bag.id}) }}">
                        {% if bag.img %}
                            <img src="{{ asset('upload/bag/' ~ bag.img) }}" alt="{{ bag.name }}" class="bag-image">
                         {% else %}
                            <div class="no-image">Aucune image</div>
                        {% endif %}
                    </a>
                </div>
                <div class="bag-info">
                    <p class="bag-name">{{ bag.name }}</p>
                    <p class="bag-owner">Proposé par : {{ bag.owner.name }}</p>
                    <p class="bag-condition">États: {{ bag.bagCondition.name }}</p>
                </div>
            </div>
        {% else %}
            <div class="no-bags">
                <p>Aucun sac trouvé</p>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}